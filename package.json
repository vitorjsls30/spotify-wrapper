{
  "name": "vs-spotify-wrapper",
  "version": "2.0.0",
  "description": "A Javascript Wrapper Library to work with the Spotify Web API",
  "main": "lib/index.js",
  "scripts": {
    "clear": "rimraf lib",
    "prebuild": "./node_modules/.bin/babel --out-dir lib src",
    "build": "npm run clear && npm run prebuild",
    "build:watch": "npm run build -- --watch",
    "build:umd": "./node_modules/.bin/webpack --output-filename spotify-wrapper.umd.js",
    "build:all": "npm run build && npm run build:umd",
    "lint": "./node_modules/.bin/eslint src/*js",
    "prepush": "npm run lint && npm run test:coverage",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --watch",
    "test:coverage": "nyc npm test",
    "coveralls": "npm run test:coverage && nyc report --reporter=text-lcov | coveralls"
  },
  "files": [
    "dist",
    "lib"
  ],
  "nyc": {
    "check-coverage": true,
    "functions": 80,
    "lines": 80,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitorjsls30/vs-spotify-wrapper.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "Vitor Jos√© <vitorjsls30@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vitorjsls30/vs-spotify-wrapper/issues"
  },
  "homepage": "https://github.com/vitorjsls30/vs-spotify-wrapper#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "eslint": "^4.19.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.9.0",
    "husky": "^0.14.3",
    "mocha": "^5.1.1",
    "node-fetch": "^2.1.2",
    "nyc": "^12.0.1",
    "rimraf": "^2.6.2",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.9.0",
    "sinon-stub-promise": "^4.0.0",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0"
  }
}
